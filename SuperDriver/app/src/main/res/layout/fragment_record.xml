<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.baidu.mapapi.map.MapView
        android:id="@+id/fragment_record_map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="10dip"
        android:gravity="center"
        android:layout_margin="20dip"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/record_item_bk">

        <TextView
            android:id="@+id/fragment_record_tv_startTime"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:gravity="center"
            android:text="2019-05-21 19:34:33"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fragment_record_tv_startPlace"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:gravity="center"
            android:text="长安大学渭水校区"
            android:textColor="#000000"
            android:textSize="15sp" />

        <View
            android:layout_width="300dip"
            android:layout_height="3px"
            android:background="#A8A8A8"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/fragment_record_tv_endTime"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:gravity="center"
            android:text="2019-05-21 21:34:33"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fragment_record_tv_endPlace"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:gravity="center"
            android:text="小寨"
            android:textColor="#000000"
            android:textSize="15sp" />
    </LinearLayout>
</FrameLayout>