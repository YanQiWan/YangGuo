<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bk"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="14.68"
        android:gravity="center">

        <View
            android:layout_width="120dip"
            android:layout_height="120dip"
            android:background="@drawable/regist_logo" />
    </LinearLayout>

    <EditText
        android:id="@+id/fragment_regist_et_phonenumber"
        android:layout_width="300dip"
        android:layout_height="0dip"
        android:layout_weight="3.67"
        android:background="@drawable/regist_phonenumber"
        android:hint="手机号"
        android:paddingLeft="60dip"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2.00" />

    <EditText
        android:id="@+id/fragment_regist_et_password"
        android:layout_width="300dip"
        android:layout_height="0dip"
        android:layout_weight="3.67"
        android:background="@drawable/regist_password"
        android:hint="密码"
        android:paddingLeft="60dip"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2.00" />

    <EditText
        android:id="@+id/fragment_regist_et_ensure_password"
        android:layout_width="300dip"
        android:layout_height="0dip"
        android:layout_weight="3.67"
        android:background="@drawable/regist_password"
        android:hint="确认密码"
        android:paddingLeft="60dip"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="5.29" />

    <Button
        android:id="@+id/fragment_regist_bt_regist"
        android:layout_width="160dip"
        android:layout_height="0dip"
        android:layout_weight="3.46"
        android:gravity="center"
        android:text="注册"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="7.20" />
</LinearLayout>